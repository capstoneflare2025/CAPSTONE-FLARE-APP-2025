<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BlackSearchViewTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColorHint">#000000</item> <!-- black hint -->
        <item name="android:textColor">#000000</item>     <!-- black typed text -->
    </style>


    <style name="TextItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Flare.VideoDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.Flare.Toolbar.InDialog" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
    </style>

        <!-- Cards -->
        <style name="App.Card.Outer" parent="">
            <item name="cardUseCompatPadding">true</item>
            <item name="cardCornerRadius">16dp</item>
            <item name="cardElevation">8dp</item>
            <item name="android:layout_margin">24dp</item>
            <item name="android:padding">16dp</item>
        </style>

        <style name="App.Card.Section" parent="">
            <item name="cardUseCompatPadding">false</item>
            <item name="cardCornerRadius">8dp</item>
            <item name="cardElevation">2dp</item>
            <item name="strokeColor">?attr/colorOutline</item>
            <item name="strokeWidth">1dp</item>
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">4dp</item>
        </style>

        <!-- Row container inside each card -->
        <style name="App.Row" parent="">
            <item name="android:padding">8dp</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <!-- Text appearances -->
        <style name="App.Text.Label" parent="TextAppearance.Material3.BodyMedium">
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginEnd">8dp</item>
        </style>

        <style name="App.Text.Value" parent="TextAppearance.Material3.BodyMedium">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
        </style>

        <!-- Buttons -->
        <style name="App.Button.Primary" parent="Widget.Material3.Button">
            <item name="android:layout_height">48dp</item>
            <item name="cornerRadius">24dp</item>
            <item name="android:textAllCaps">false</item>
        </style>

        <style name="App.Button.Danger" parent="App.Button.Primary">
            <item name="backgroundTint">#E00024</item>
            <item name="android:textColor">@android:color/white</item>
        </style>



</resources>
