<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/App.Card.Outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Name -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardName"
            style="@style/App.Card.Section"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout style="@style/App.Row">
                <TextView
                    style="@style/App.Text.Label"
                    android:text="Name:" />

                <TextView
                    android:id="@+id/txtName"
                    style="@style/App.Text.Value" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Contact -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardContact"
            style="@style/App.Card.Section"
            app:layout_constraintTop_toBottomOf="@id/cardName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout style="@style/App.Row">
                <TextView
                    style="@style/App.Text.Label"
                    android:text="Contact:" />

                <TextView
                    android:id="@+id/txtContact"
                    style="@style/App.Text.Value" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Alert Level -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAlert"
            style="@style/App.Card.Section"
            app:layout_constraintTop_toBottomOf="@id/cardContact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout style="@style/App.Row">
                <TextView
                    style="@style/App.Text.Label"
                    android:text="Alert Level:" />

                <TextView
                    android:id="@+id/txtAlertLevel"
                    style="@style/App.Text.Value" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Date - Time -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDate"
            style="@style/App.Card.Section"
            app:layout_constraintTop_toBottomOf="@id/cardAlert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout style="@style/App.Row">
                <TextView
                    style="@style/App.Text.Label"
                    android:text="Date - Time:" />

                <TextView
                    android:id="@+id/txtDate"
                    style="@style/App.Text.Value" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Fire Start Time -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStartTime"
            style="@style/App.Card.Section"
            app:layout_constraintTop_toBottomOf="@id/cardDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout style="@style/App.Row">
                <TextView
                    style="@style/App.Text.Label"
                    android:text="Fire Start Time:" />

                <TextView
                    android:id="@+id/txtStartTime"
                    style="@style/App.Text.Value" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Houses Affected -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHouses"
            style="@style/App.Card.Section"
            app:layout_constraintTop_toBottomOf="@id/cardStartTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout style="@style/App.Row">
                <TextView
                    style="@style/App.Text.Label"
                    android:text="Houses Affected:" />

                <TextView
                    android:id="@+id/txtHouses"
                    style="@style/App.Text.Value" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Location -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLocation"
            style="@style/App.Card.Section"
            app:layout_constraintTop_toBottomOf="@id/cardHouses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout style="@style/App.Row">
                <TextView
                    style="@style/App.Text.Label"
                    android:text="Location:" />

                <TextView
                    android:id="@+id/txtLocation"
                    style="@style/App.Text.Value" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Status -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatus"
            style="@style/App.Card.Section"
            app:layout_constraintTop_toBottomOf="@id/cardLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout style="@style/App.Row">
                <TextView
                    style="@style/App.Text.Label"
                    android:text="Status:" />

                <TextView
                    android:id="@+id/txtStatus"
                    style="@style/App.Text.Value" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            style="@style/App.Button.Danger"
            android:text="Close"
            app:layout_constraintTop_toBottomOf="@id/cardStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
