<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <!-- Title Section -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIRE REPORT"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#E00024"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
            android:id="@+id/logoCard"
            android:layout_width="100dp"
            android:layout_marginTop="60dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="Logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    <!-- Fire Time Question -->
    <TextView
        android:id="@+id/fire_time_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What time did the fire start?"
        android:textSize="20sp"
        android:textColor="?android:textColorPrimary"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/logoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Time Selection Section -->
    <LinearLayout
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="@drawable/rounded_card_bg"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/fire_time_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hour -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:text="Hour"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_height="match_parent"
                android:layout_width="40dp"
                />

            <Spinner
                android:id="@+id/spinner_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <!-- Minute -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:text="Minute"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_height="match_parent"
                android:layout_width="60dp"/>

            <Spinner
                android:id="@+id/spinner_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <!-- AM/PM -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:text="AM/PM"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_height="match_parent"
                android:layout_width="65dp"/>

            <Spinner
                android:id="@+id/spinner_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Houses Affected Question -->
    <TextView
        android:id="@+id/houses_affected_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many houses were affected?"
        android:textSize="20sp"
        android:textColor="?android:textColorPrimary"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Houses Input -->
    <EditText
        android:id="@+id/houses_affected_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ex. 1"
        android:inputType="number"
        android:textSize="20sp"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_input_bg"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/houses_affected_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/sendCancel"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/houses_affected_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="CANCEL"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E00024"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="SEND"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E87F2E  " />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/progress_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="325dp"
        android:layout_gravity="center">

        <!-- Icon behind -->
        <ImageView
            android:id="@+id/progress_icon"
            android:layout_width="100dp"
            android:visibility="gone"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo"
            android:scaleType="centerInside"
            /> <!-- optional transparency -->

        <!-- ProgressBar on top -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:indeterminate="true" />

    </FrameLayout>

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/progress_icon_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:text="Sending Report, Please wait..." />


</androidx.constraintlayout.widget.ConstraintLayout>
