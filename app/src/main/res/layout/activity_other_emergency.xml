<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTHER EMERGENCY"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Emergency Options -->
    <LinearLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="-10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="32dp"
        android:spacing="16dp">

        <!-- First Row: Flooding and Building Collapse -->
        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp">

            <!-- Flooding Button -->
            <LinearLayout
                android:id="@+id/floodingButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="3dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/floodingIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flooding"
                    android:layout_gravity="center" />
            </LinearLayout>

            <!-- Building Collapse Button -->
            <LinearLayout
                android:id="@+id/buildingCollapseButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:layout_marginStart="80dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/buildingCollapseIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_building_collapse"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- First Row Text Labels Below Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="-20dp">

            <!-- Flooding Label -->
            <TextView
                android:id="@+id/floodingText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Flooding"
                android:textSize="20sp"
                android:textColor="?android:textColorPrimary"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="47dp"/>

            <!-- Building Collapse Label -->
            <TextView
                android:id="@+id/buildingCollapseText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:text="Building Collapse"
                android:textColor="?android:textColorPrimary"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="49dp"/>
        </LinearLayout>

        <!-- Second Row: Gas Leak and Fallen Tree -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="40dp">

            <!-- Gas Leak Button -->
            <LinearLayout
                android:id="@+id/gasLeakButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:layout_marginStart="3dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/gasLeakIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gas_leak"
                    android:layout_gravity="center" />
            </LinearLayout>

            <!-- Fallen Tree Button -->
            <LinearLayout
                android:id="@+id/fallenTreeButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:layout_marginStart="80dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/fallenTreeIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_fallen_tree"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row Text Labels Below Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="-20dp">

            <!-- Gas Leak Label -->
            <TextView
                android:id="@+id/gasLeakText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Gas Leak"
                android:textSize="20sp"
                android:textColor="?android:textColorPrimary"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"/>

            <!-- Fallen Tree Label -->
            <TextView
                android:id="@+id/fallenTreeText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Fallen Tree"
                android:textSize="20sp"
                android:textColor="?android:textColorPrimary"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="70dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Cancel and Send Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:backgroundTint="#E00024"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="-70dp" /> <!-- Adjusted margin to increase space between buttons -->

        <Button
            android:id="@+id/sendButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:backgroundTint="#E87F2E "
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginStart="130dp" /> <!-- Adjusted margin to increase space between buttons -->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
