<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTHER EMERGENCY"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#E00024"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Brand -->
    <ImageView
        android:id="@+id/logoCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <!-- Optional helper -->
    <TextView
        android:id="@+id/helper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose an emergency type"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/logoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tiles (2 columns) using Flow -->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="floodingButton,buildingCollapseButton,gasLeakButton,fallenTreeButton"
        app:flow_maxElementsWrap="2"
        app:flow_horizontalGap="12dp"
        app:flow_verticalGap="12dp"
        app:flow_wrapMode="chain"
        app:layout_constraintTop_toBottomOf="@id/helper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Flooding -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/floodingButton"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/floodingIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_flooding"
                android:contentDescription="Flooding" />

            <TextView
                android:id="@+id/floodingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flooding"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Building Collapse -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/buildingCollapseButton"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/buildingCollapseIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_building_collapse"
                android:contentDescription="Building Collapse" />

            <TextView
                android:id="@+id/buildingCollapseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building Collapse"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Gas Leak -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gasLeakButton"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/gasLeakIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_gas_leak"
                android:contentDescription="Gas Leak" />

            <TextView
                android:id="@+id/gasLeakText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gas Leak"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Fallen Tree -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fallenTreeButton"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/fallenTreeIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_fallen_tree"
                android:contentDescription="Fallen Tree" />

            <TextView
                android:id="@+id/fallenTreeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fallen Tree"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Actions -->
    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="-60dp"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            app:cornerRadius="24dp"
            app:backgroundTint="#E00024"
            />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Send"
            android:textAllCaps="false"
            app:cornerRadius="24dp"
            app:backgroundTint="#E87F2E"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
